<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="fontFamily">@font/red_hat_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="fontFamily">@font/red_hat_display_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Subtitle" parent="Text">
        <item name="fontFamily">@font/red_hat_display_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/input_drawable</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Input">
        <item name="android:background">@android:color/transparent</item>
        <item name="maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/red_hat_display_regular</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/round_button_background</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>