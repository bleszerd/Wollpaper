<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WollPaper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_niagara</item>
        <item name="colorPrimaryVariant">@color/niagara</item>
        <item name="colorOnPrimary">@color/road</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/niagara</item>
        <item name="colorSecondaryVariant">@color/light_niagara</item>
        <item name="colorOnSecondary">@color/road</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/road</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>